/* pages/singer/singerDetails/singerDetails.wxss */
/* 背景图 */
.portrait {
  color: #fff;
  position: relative;
  width: 100%;
  display: inline-block;
}
/* 歌手名 */
.name {
  position: absolute;
  font-size: 36rpx;
  top: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
}
/* 随机播放按钮 */
.play {
  position: absolute;
  bottom: 90rpx;
  left: 0;
  right: 0;
  width: 50%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-evenly;
  border-radius: 70rpx;
  border: 1px solid #fff;
  margin: 0 auto;
  color: #000;
  background: #fff;
}
/* 随机播放内部按钮 */
.van-icon {
  margin-top: 5rpx;
}
/* 个人主页按钮 */
.personal {
  display: flex;
  justify-content: space-evenly;
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  width: 180rpx;
  bottom: 20rpx;
  right: 170rpx;
  font-size: 24rpx;
  border-radius: 70rpx;
  border: 1px solid #fff;
  text-align: center;
}
/* 收藏按钮 */
.Collection {
  display: flex;
  justify-content: space-evenly;
  font-size: 24rpx;
  border-radius: 70rpx;
  border: 1px solid #fff;
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  width: 140rpx;
  right: 10rpx;
  bottom: 20rpx;
}
/* 导航栏 */
.nav {
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
/* 专辑、MV数量 */
.txt {
  font-size: 24rpx;
  color: #7d7e80;
}
/* 底部歌曲信息列表 */
.songs {
  display: flex;
}
/* 序号 */
.serial {
  color: #979787;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
  padding: 20rpx 0;
  width: 60rpx;
  text-align: center;
}
/* 歌名、专辑名外层 */
.right {
  height: 80rpx;
  padding: 20rpx 0;
  width: 80%;
}
/* 歌名次外层 */
.rath {
  width: 78%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
/* 歌曲原出处 */
.raths {
  color: #7d7e7f;
}
/* SQ标识、专辑名外层 */
.Album {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
}
/* SQ标识 */
.sq {
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -6rpx;
  width: 25rpx;
  height: 25rpx;
}
/* 专辑名 */
.album {
  margin-left: 35rpx;
  color: #a8a9aa;
  font-size: 24rpx;
}
/* 歌名、专辑名、播放按钮外层 */
.stop {
  display: flex;
  align-items: center;
  width: 82%;
  position: relative;
}
/* 播放按钮 */
.plays {
  font-size: 40rpx;
  position: absolute;
  right: 0;
}
