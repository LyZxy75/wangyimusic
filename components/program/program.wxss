/* components/program/program.wxss */
.recommended_program {
  margin-top: 60rpx;
}

.recommend_songs {
  display: flex;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
}

.songs {
  margin-left: 20rpx;
}

.square {
  position: absolute;
  width: 158rpx;
  border-radius: 70rpx;
  right: 30rpx;
  background: #eee;
  text-align: center;
}

.recommendation {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list {
  width: 32%;
  margin-top: 20rpx;
}

.mv {
  height: 140rpx;
}

.recommend_bg {
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
}

.name {
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 98%;
  line-height: 80rpx;
}